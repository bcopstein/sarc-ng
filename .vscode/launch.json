{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "log",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app"
                }
            ]
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.run",
                "${selectedText}|^Test${fileBasenameNoExtension}$"
            ],
            "showLog": true
        }
    ]
} 